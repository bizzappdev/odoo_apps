<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="web_no_auto_save.FormStatusIndicator"  t-inherit="web.FormStatusIndicator"  owl="1">
        <xpath expr="//span[hasclass('text-muted')]" position="attributes">
            <attribute name="style">font-weight: 900;</attribute>
        </xpath>
        <xpath expr="//button[hasclass('o_form_button_save')]" position="attributes">
            <attribute name="class">o_form_button_save btn btn-primary</attribute>
        </xpath>
    </t>
</templates>
